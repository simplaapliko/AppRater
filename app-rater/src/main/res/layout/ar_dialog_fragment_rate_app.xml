<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/ar_dialog_horizontal_padding"
    android:paddingRight="@dimen/ar_dialog_horizontal_padding"
    android:paddingTop="@dimen/ar_dialog_vertical_padding"
    android:paddingBottom="@dimen/ar_dialog_vertical_padding"
    >

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/ar_color_text"
        />

</LinearLayout>