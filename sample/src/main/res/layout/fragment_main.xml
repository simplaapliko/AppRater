<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simplaapliko.apprater.sample.MainFragment"
    tools:showIn="@layout/activity_main"
    >

    <Button
        android:id="@+id/show_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_rate_dialog"
        />

    <Button
        android:id="@+id/get_first_launch_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_first_launch_date"
        />

    <Button
        android:id="@+id/get_launch_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_launch_count"
        />

    <Button
        android:id="@+id/is_do_not_show_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/is_do_not_show_again"
        />

    <Button
        android:id="@+id/is_time_to_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/is_time_to_rate"
        />

</LinearLayout>
